@model IEnumerable<MyMvcSample.ViewModels.OrderViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th></th>
        <th>
            Id
        </th>
        <th>
            Name
        </th>
        <th>
            Order Date
        </th>
        <th>
            Created On
        </th>
        <th>
            Created By
        </th>
        <th>
            OrderItems
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
        <td>@item.Id</td>
        <td>@item.Name</td>
        <td>
            @String.Format("{0:g}", item.OrderDate)
        </td>
        <td>@string.Format("{0:g}", item.CreatedOn)</td>
        <td>@item.CreatedBy</td>
        <td>@item.NumOfOrderLineItems</td>
    </tr>
}

</table>


