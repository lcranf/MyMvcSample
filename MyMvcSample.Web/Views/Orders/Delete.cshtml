@model MyMvcSample.Domain.Entities.Order

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete '@Model.Name'?</h3>
<fieldset>
    <legend>@Model.Name</legend>

    <div class="display-label">Order Name</div>
    <div class="display-field">@Model.Name</div>

    <div class="display-label">OrderDate</div>
    <div class="display-field">@String.Format("{0:g}", Model.OrderDate)</div>

    <div class="display-label">OrderItems</div>
    <div class="display-field">@(Model.OrderItems == null ? "None" : Model.OrderItems.Count.ToString())</div>
</fieldset>
@using (Html.BeginForm()) {
    <p>
        <input type="submit" value="Delete" /> |
        @Html.ActionLink("Back to List", "Index")
    </p>
}


