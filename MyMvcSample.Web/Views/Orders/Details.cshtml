@model MyMvcSample.ViewModels.OrderViewModel

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<fieldset>
    <legend>Order</legend>

    <div class="display-label">Id</div>
    <div class="display-field">@Model.Id</div>

    <div class="display-label">OrderDate</div>
    <div class="display-field">@String.Format("{0:g}", Model.OrderDate)</div>

    <div class="display-label">Order Items</div>
    <div class="display-field">@Model.NumOfOrderLineItems</div>

    @Html.Partial("_AuditDetails", Model)

</fieldset>
<p>
    @Html.ActionLink("Edit", "Edit", new { id=Model.Id }) |
    @Html.ActionLink("Back to List", "Index")
</p>


