@model MyMvcSample.Domain.Entities.Product

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<fieldset>
    <legend>Product</legend>

    <div class="display-label">Name</div>
    <div class="display-field">@Model.Name</div>

    <div class="display-label">Price</div>
    <div class="display-field">@String.Format("{0:F}", Model.Price)</div>

    <div class="display-label">Order</div>
    <div class="display-field">@(Model.Order == null ? "None" : Model.Order.Name)</div>

    <div class="display-label">AnotherPrivateIntVar</div>
    <div class="display-field">@Model.AnotherPrivateIntVar</div>
</fieldset>
@using (Html.BeginForm()) {
    <p>
        <input type="submit" value="Delete" /> |
        @Html.ActionLink("Back to List", "Index")
    </p>
}


